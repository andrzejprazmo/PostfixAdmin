@model SEE.PostfixAdmin.BackEnd.Common.Contracts.MailboxContract
@{
    ViewData["Title"] = "Edit mailbox";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row"><div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><p class="lead">Edit mailbox</p><hr /></div></div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form role="form" method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="panel panel-default">
                    <div class="panel-heading">Create new mailbox</div>
                    <div class="panel-body">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <div>The form is not valid. Please, correct the data and try to save again.</div>
                                <div>@Html.ValidationMessage("EXCEPTION")</div>
                            </div>
                        }
                        <div class="form-group">
                            <label class="control-label col-lg-2 col-md-2 col-sm-4 col-xs-12" for="UserName">User name:</label>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="user-name" name="UserName" placeholder="Enter user name" asp-for="UserName" />
                                    <span class="input-group-addon">@@</span>
                                    <select class="form-control" asp-items="@ViewBag.DomainsDictionary" asp-for="DomainId">
                                        <option>-- select domain --</option>
                                    </select>
                                </div>
                                <div>
                                    <span>@Html.ValidationMessageFor(m => m.UserName)</span>&nbsp;
                                    <span>@Html.ValidationMessageFor(m => m.DomainId)</span>
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2 col-md-2 col-sm-4 col-xs-12" for="Quota">Mailbox quota:</label>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="quota" name="Quota" placeholder="Enter mailbox size (megabytes)" asp-for="Quota" />
                                    <span class="input-group-addon">MB</span>
                                </div>
                                <div>
                                    @Html.ValidationMessageFor(m => m.Quota)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2 col-md-2 col-sm-4 col-xs-12" for="IsAdmin">Administrator:</label>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="checkbox"><label><input type="checkbox" name="IsAdmin" id="is-admin" asp-for="IsAdmin" /></label></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2 col-md-2 col-sm-4 col-xs-12" for="IsAdmin">Is active:</label>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="checkbox"><label><input type="checkbox" name="IsActive" id="is-active" asp-for="IsActive" /></label></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <a class="btn btn-default pull-left" asp-controller="Mailbox" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <button type="submit" class="btn btn-primary pull-right">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="Id" name="Id"/>
            </form>
        </div>
    </div>
</div>
