@{
    ViewData["Title"] = "Account created";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row"><div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><p class="lead">Account created</p><hr /></div></div>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">Password changed</div>
                <div class="panel-body">
                    Your first account has been created. Click <strong>OK</strong> to display login page.
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <a class="btn btn-default pull-right" asp-controller="Account" asp-action="Login" >OK</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
