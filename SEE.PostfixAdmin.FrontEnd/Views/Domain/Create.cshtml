@model SEE.PostfixAdmin.BackEnd.Common.Contracts.DomainContract
@{
    ViewData["Title"] = "Create new domain";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row"><div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><p class="lead">Create new domain</p><hr /></div></div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form role="form" method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="panel panel-default">
                    <div class="panel-heading">Create new domain</div>
                    <div class="panel-body">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <div>The form is not valid. Please, correct the data and try to save again.</div>
                                <div>@Html.ValidationMessage("EXCEPTION")</div>
                            </div>
                        }
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Domain name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="domain-name" name="Name" placeholder="Enter domain name" asp-for="Name" size="164">
                                <div>
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <a class="btn btn-default pull-left" asp-controller="Domain" asp-action="Index">Cancel</a>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <button type="submit" class="btn btn-primary pull-right">Create</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
